{
  "ConnectionStrings": {
    "BookStoreDbConnection": "Server=localhost\\sqlexpress;Database=BookStoreDB;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=false"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
